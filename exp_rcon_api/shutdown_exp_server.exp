#!/usr/bin/expect

set timeout 20
set password [lindex $argv 0]
spawn telnet localhost [lindex $argv 1]
set message [lindex $argv 2]
set current_telid $spawn_id

expect "Enter password:"

send "$password\n"

sleep 3
send "say $message \n"
sleep 1
send "shutdown \n"




#this is needed at the end to execute the last message c:
sleep 1
